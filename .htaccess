# Включение модуля mod_rewrite
RewriteEngine On

# Базовые настройки безопасности
# ---------------------------------------------------------------------

# Запрет просмотра содержимого директорий
Options -Indexes

# Блокировка доступа к敏感 файлам
<FilesMatch "\.(env|log|htaccess|htpasswd|ini|phps|fla|psd|bat|sh|swp|bak|sql|gitignore|gitattributes|json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Запрет исполнения PHP в uploads (если есть загрузка файлов)
<FilesMatch "\.(php|php5|php7|phtml)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Защита от XSS, clickjacking и MIME-спуфинга
<IfModule mod_headers.c>
    Header set X-XSS-Protection "1; mode=block"
    Header always append X-Frame-Options SAMEORIGIN
    Header set X-Content-Type-Options nosniff
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains" env=HTTPS
</IfModule>

# Защита от SQL-инъекций и RFI/LFI (Remote/Local File Inclusion)
<IfModule mod_rewrite.c>
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
    RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
    RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2})
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Запрет горячих ссылок (hotlinking) на изображения
RewriteCond %{HTTP_REFERER} !^$
RewriteCond %{HTTP_REFERER} !^https?://(www\.)?ваш-сайт\.com [NC]
RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [NC,F,L]

# Блокировка плохих ботов и сканеров
SetEnvIfNoCase User-Agent "^(libwww-perl|wget|python|nikto|curl|scan|java|winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner|sqlmap)" bad_bot
Deny from env=bad_bot

# Перенаправление HTTP → HTTPS (если используется SSL)
<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Кэширование и сжатие для ускорения загрузки
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript
</IfModule>

# Перенаправление всех запросов на index.php (если используется ЧПУ)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?url=$1 [L,QSA]